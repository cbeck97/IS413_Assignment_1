@{
    ViewBag.Title = "Calculate Your Overall Grade in the Class";
}

@model CalculatorModel

<body>
    <div class="calculator">
        <h3>@ViewBag.Title</h3>
        <p><i>Please enter the percentage as a whole number.</i></p>
        <form method="post" onsubmit="calcGrade()">
            <label for="assignments">Assignments</label>
            <input class="pct" type="number" id="assignments" asp-for="assignments"><br>
            <label for="group">Group Project</label>
            <input class="pct" type="number" id="group" asp-for="group"><br>
            <label for="quiz">Quizzes</label>
            <input class="pct" type="number" id="quiz" asp-for="quiz"><br>
            <label for="exam">Exams</label>
            <input class="pct" type="number" id="exam" asp-for="exam"><br>
            <label for="intex">INTEX</label>
            <input class="pct" type="number" id="intex" asp-for="intex"><br>
            <br>
            <input class="button" id="submit" type="submit" value="Calculate">
        </form>

        <div asp-validation-summary="All"></div>

        <h3>Final Grade:</h3>
        <p id="grade"></p>
    </div>
</body>